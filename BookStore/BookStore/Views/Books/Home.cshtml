@model IEnumerable<BookStore.Models.Entities.Book>
@{
    ViewBag.Title = "title";
    Layout = null;
}
<head>
    <link href="~/Content/Styles/Main.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="header">
        <div class="nav">

            <ul class="login">
                <li><a href="#login">LOGIN</a></li>
                <li><a href="#singup">SING UP</a></li>
            </ul>
            <input type="text" name="search">
            <a href="#" class="logo"><img src="~/Resources/Images/logo.png"></a>
            <p class="menu">
                <ul>
                    <li><a href="#books">BOOKS</a></li>
                    <li><a href="#contact">CONTACT</a></li>
                    <li><a href="#about">ABOUT</a></li>
                </ul>
            </p>
        </div>
    </div>
    <div class="content">

        @*<div class="recommendet">
                <h3>RECOMMENDET</h3>
                <a href="#"><img class="r_book" src="~/Resources/Images/harry_potter1.png" width="150" height="200" /></a>
            </div>*@

        @foreach (var book in @Model)
            {
            <div class="book">
                <a target="_blank" href="@Url.Content(@book.BookCover.Path)">
                    <img src="@Url.Content(@book.BookCover.Path)" alt="Image">
                </a>
                <div class="desc">
                    <p class="desc-title">@book.Title</p>
                    <p class="desc-genre">@book.Genre</p>
                </div>
            </div>
        }

    </div>
</body>

