@model IEnumerable<BookStore.Migrations.Entities.Book>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var book in @Model)
            {
    <div class="book">

        <a target="_blank" href="@Url.Content(book.Image.Path)">
            <img src="@Url.Content(book.Image.Path)" alt="Image">
        </a>
        <div class="desc">
            <p class="desc-title">@book.Title</p>
            <p class="desc-genre">@book.Genre</p>
        </div>
    </div>
}